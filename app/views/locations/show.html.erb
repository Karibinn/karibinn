<%= render 'shared/search_pills', url: location_path(@location) %>

<hr />

<h1><%= @location.name %></h1>

<div class="row">
  <div class="col">
    <%= image_tag @location.large_image.url, class: 'img-fluid img-thumbnail' %>
  </div>
  <div class="col">
    <%= render_markdown(@location.description) if @location.description.present? %>
  </div>
</div>

<h2 class="mt-4"><%= t('.offers') %></h2>
<div class="products">
  <% @property_products.each do |product| %>
    <%= render partial: 'shared/product_card', locals: { product: product } %>
  <% end %>
</div>

<%= paginate @property_products %>
