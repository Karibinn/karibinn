<h1 class="mb-3"><%= t('.header') %></h1>
<div class="locations">
  <% @locations.each do |location| %>
    <%= link_to location do %>
      <div class="location">
        <div><%= image_tag location.small_image.thumb.url, class: 'img-fluid' %></div>
        <p><%= location.name %> </p>
      </div>
    <% end %>
  <% end %>
</div>

<h2 class="mt-4"><%= t('.offers') %></h2>
<div class="products">
  <% @property_products.each do |product| %>
    <%= render partial: 'shared/product_card', locals: { product: product } %>
  <% end %>
</div>

<%= paginate @property_products %>
