<h1>Bookings</h1>

<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.first_name %></td>
        <td><%= booking.last_name %></td>
        <td><%= booking.email %></td>
        <td><%= link_to 'Show', [:admin, booking] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @bookings %>
