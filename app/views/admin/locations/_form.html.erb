
<%= simple_form_for([:admin, @location], html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col">
        <%= f.input :name_en %>
        <%= f.input :description_en %>
      </div>
      <div class="col">
        <%= f.input :name_fr %>
        <%= f.input :description_fr %>
      </div>
    </div>
    <div class="row">
      <%= f.input :small_image, as: :image_preview, input_html: {preview_version: :thumb} %>
      <%= f.input :large_image %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
