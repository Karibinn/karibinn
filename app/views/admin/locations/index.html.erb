<h1>Locations</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>English name</th>
    <th>French name</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name_en %></td>
      <td><%= location.name_fr %></td>
      <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
      <td><%= link_to 'Destroy', [:admin, location], class: 'text-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_admin_location_path %>
