<h2 class="locations__header"><%= t('.header') %></h2>
<div class="locations">
  <% locations.each do |location| %>
    <%= link_to location do %>
      <div class="location">
        <div><%= image_tag location.small_image.thumb.url, class: 'img-fluid location__image' %></div>
        <p class="location__name"><%= location.name %> </p>
      </div>
    <% end %>
  <% end %>
</div>
