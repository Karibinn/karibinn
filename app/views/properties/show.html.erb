<div class="row">
  <div id="image-carousel" class="w-100 carousel slide property__carousel">
    <ol class="carousel-indicators">
      <% @product.images.size.times do |i| %>
        <li data-target="#image-carousel" data-slide-to="<%= i %>" class="active"></li>
      <% end %>
    </ol>
    <div class="carousel-inner property__image-carousel-inner">
      <% @product.images.each_with_index do |image, idx| %>
        <div class="carousel-item <%= 'active' if idx.zero? %>">
          <img class="d-block w-100" src="<%= image.url %>">
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#image-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#image-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="row m-5">
  <div class="col">
    <h4><%= @property.property_type.name(I18n.locale) %></h4>
    <h1><%= @product.title %></h1>
    <h4 class="property__data_subheader">
      <span class="property__data"> <%= t('.guests', count: @property.guest_capacity) %></span>
      <span class="property__data"><%= t('.bedrooms', count: @property.bedrooms) %></span>
      <span class="property__data"><%= t('.beds', count: @property.beds) %></span>
      <span class="property__data"><%= t('.baths', count: @property.baths) %></span>
    </h4>
    <p><%= @product.description %></p>


    <div class="property__amenities-container">
      <h3><%= t('.amenities') %></h3>

      <div class="property__amenities">
        <% @property.equipments.each do |equipment| %>
          <div class="property__amenity">
            <span class="float-left"><img src="https://via.placeholder.com/50x50"/></span>
            <span><%= equipment.name(I18n.locale) %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col">
    <%= render partial: 'booking_component', locals: { property: @property } %>
  </div>
</div>
