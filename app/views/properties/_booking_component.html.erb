<div class="booking-component card m-auto">
  <div class="card-body">
    <h5 class="card-title mb-4">
      <span class="booking-component__price">$59</span> per night
    </h5>

    <%= form_with(url: 'unimplemented', class: 'booking-component__form') do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6 m-0">
          <%= f.label :date_from, t('booking_component.dates'), class: 'font-weight-bold' %>
        </div>
      </div>
      <div class="booking-component__form_row form-row">
        <div class="form-group col-md-6">
          <div class="input-group">
            <%= f.text_field :date_from,
                             placeholder: t('booking_component.placeholder_from'),
                             data: { provide: 'datepicker' },
                             class: 'datepicker form-control' %>
            <div class="input-group-append">
              <i class="input-group-text fa fa-calendar"></i>
            </div>
          </div>
        </div>

        <div class="form-group col-md-6">
          <div class="input-group">
            <%= f.text_field :date_to,
                             placeholder: t('booking_component.placeholder_to'),
                             data: { provide: 'datepicker' },
                             class: 'datepicker form-control' %>
            <div class="input-group-append">
              <i class="input-group-text fa fa-calendar"></i>
            </div>
          </div>
        </div>
      </div>

      <div class="booking-component__form_row form-group">
        <%= f.label :guest_count, t('booking_component.guests'), class: 'font-weight-bold' %>
        <%= f.number_field :guest_count,
                           placeholder: t('booking_component.placeholder_guests'),
                           class: 'form-control' %>
      </div>
      <div class="booking-component__form_row form-row">
        <%= f.submit t('booking_component.submit'), class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

    <div class="booking-component__services">
      <% @property.property_services.each do |service| %>
        <div><i class="booking-component__check fa fa-check"></i><%= service.name(I18n.locale) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
