  <div class="row">
    <div class="col">
      <h2 class="insider-section__headline"><%= t('.insider_view_header') %></h2>
    </div>
  </div>
  <div class="row">
    <%= link_to page_path('beyond-the-beach-in-guadeloupe'), class: 'col-md-8' do %>
      <div class="insider-section__element-wrapper">
        <div class="insider-section__element insider-section__element--featured insider-section__guadeloupe">
          <div>
            <div class="insider-section__caption">
              Au-delà de la mer en Guadeloupe
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to page_path('ah-oui-chic-martinique'), class: 'col-md-4' do %>
      <div class="insider-section__element-wrapper">
        <div class="insider-section__element insider-section__martinique">
          <div>
            <div class="insider-section__caption">
              Ah Oui, Chic Martinique!
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to page_path('des-offres-sur-mesure'), class: 'col-md-4' do %>
      <div class="insider-section__element-wrapper insider-section__element-wrapper--small">
        <div class="insider-section__element insider-section__element--two-captions insider-section__properties">
          <h2 class="insider-section__top-caption">
            Des offres sur mesure
          </h2>
          <div>
            <div class="insider-section__caption">
              Villas, bungalows, appartements, hotels de charmes, résidences
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to page_path('conciergerie-client'), class: 'col-md-4' do %>
      <div class="insider-section__element-wrapper insider-section__element-wrapper--small">
        <div class="insider-section__element insider-section__element--two-captions insider-section__concierge">
          <h2 class="insider-section__top-caption">Conciergerie client</h2>
          <div>
            <div class="insider-section__caption">
              Organisation sur mesure avec une conciergerie client Disponible 7/7
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to page_path('sejour-a-la-carte'), class: 'col-md-4' do %>
      <div class="insider-section__element-wrapper insider-section__element-wrapper--small">
        <div class="insider-section__element insider-section__element--two-captions insider-section__sur-mesure">
          <h2 class="insider-section__top-caption">Séjour à la carte</h2>
          <div>
            <div class="insider-section__caption">
              Des séjours construit sur mesure pour répondre à vos envies
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

