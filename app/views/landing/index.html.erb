<% content_for :hero do %>
  <div class="row landing__jumbotron jumbotron justify-content-center">
    <div class="container landing__container">
      <h1 class="landing__headline"><%= t('.header') %></h1>

      <%= form_for PropertySearchForm.new, url: properties_path, method: :get, html: { class: 'landing__search' } do |f| %>
        <div class="form-row align-items-center">
          <div class="col-lg-4">
            <div class="input-group input-group-lg">
              <div class="input-group-prepend">
                <i class="input-group-text fa fa-search bg-white"></i>
              </div>
              <%= f.select :location_slug, options_for_select(Location.with_products.map { |c| [c.name, c.slug] }), { include_blank: t('.pick_your_destination') }, class: 'form-control landing__location-picker' %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="input-group input-group-lg">
              <div class="input-group-prepend">
                <i class="input-group-text bg-white fa fa-calendar"></i>
              </div>
              <%= f.text_field :dates,
                               class: 'form-control border-left-0',
                               placeholder: t('.date_to_placeholder'),
                               data: {
                                   controller: 'date-range-picker',
                                   target: 'date-range-picker.input'
                               }
              %>
            </div>
          </div>
          <div class="col-lg-4">
            <%= f.submit t('.search'), class: 'btn btn-primary btn-lg btn-block text-uppercase' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="row landing__odd">
  <div class="landing__container">
    <div class="row">
      <% 1.upto(3) do |i| %>
        <div class="col-lg-4">
          <%= image_tag "landing-image#{i}.svg", class: 'img-fluid landing__info-image' %>
          <h4 class="text-uppercase mb-3 mt-3"><%= t(".detail_header#{i}") %></h4>
          <p class="text-secondary"><%= t(".detail_paragraph#{i}") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

