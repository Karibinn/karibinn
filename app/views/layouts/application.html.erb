<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="<%= image_path('favicon-32x32.png') %>" sizes="32x32" />
    <link rel="icon" type="image/png" href="<%= image_path('favicon-16x16.png') %>" sizes="16x16" />
    <title>Karibinn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <%= render 'layouts/scripts' %>
    <% end %>
  </head>
  <body>
  <%= render 'layouts/nav' %>
    <div class="container-fluid">
      <%= content_for :hero %>
      <main class="<%= 'main-margin' unless current_page?(root_path) %>">
        <% unless current_page?(root_path) %>
          <%= render 'shared/flash_messages' %>
        <% end %>
        <%= yield %>
      </main>
    </div>
  <%= render 'layouts/footer' %>
  </body>
</html>
