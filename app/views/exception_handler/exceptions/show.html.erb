<% not_found = @exception.status.to_s.first == '4' %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <% @search_form = PropertySearchForm.new %>
      <%= render 'shared/search_pills', url: properties_path %>
    </div>
  </div>

  <hr class="mb-5"/>

  <div class="row">
    <div class="col-md-10 text-center">
      <% if not_found %>
        <%= image_tag(image_path('404.svg'), class: 'img-fluid w-50') %>
      <% else %>
        <%= image_tag(image_path('500.svg'), class: 'img-fluid w-50') %>
      <% end %>

      <h2 class="my-3 text-center display-4">
        <%= t('errors.not_found.header') %>
      </h2>
    </div>
  </div>

</div>

<div class="bg-dark full-width py-5 mt-5">
  <%= render 'shared/locations',
             locations: Location.all,
             header: not_found ? t('errors.not_found.locations_header') : t('errors.internal_server_error.locations_header') %>
</div>

