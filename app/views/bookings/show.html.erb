<div class="row ml-5 mr-5">
  <div class="col">
    <h1><%= t('.header') %></h1>
  </div>
</div>

<div class="row m-5">
  <table class="table table-responsive">
    <thead>
    <th></th>
    <th></th>
    <th><%= t('.dates') %></th>
    <th><%= t('.guests') %></th>
    <th><%= t('.price') %></th>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.product.default_image.thumb.url, class: 'booking__image-thumb' %></td>
        <td class="booking__title"><%= item.product.title %></td>
        <td><%= t('.dates_html', checkin: l(item.checkin_date.to_date), checkout: l(item.checkout_date.to_date)) %></td>
        <td><%= item.guests %></td>
        <td><%= number_to_currency(item.price) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="checkout-widget">
  <h2 class="mb-4">
    <span><%= t('.total') %></span>
    <span class="pull-right"><%= number_to_currency(@booking.total) %></span>
  </h2>
  <%= link_to t('.checkout'), '#', class: 'btn btn-lg btn-block btn-primary' %>
</div>

<%= render partial: 'shared/products_spacer', locals: {
    header: t('.activities_header'),
    products: @activity_products,
    link: link_to(t('.activities_link'), activities_path)
} %>
