<div class="row">
  <div class="col">
    <h1><%= t('.header') %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-7">
    <table class="table table-responsive">
      <thead>
      <th></th>
      <th></th>
      <th><%= t('.dates') %></th>
      <th><%= t('.guests') %></th>
      <th><%= t('.price') %></th>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item.product.default_image.thumb.url, class: 'booking__image-thumb' %></td>
          <td class="booking__title"><%= item.product.title %></td>
          <% if item.is_a? BookingItems::Property %>
            <td class="text-muted"><%= t('.dates_html', checkin: l(item.checkin_date.to_date), checkout: l(item.checkout_date.to_date)) %></td>
          <% else %>
            <td class="text-muted"><%= t('.date', date: l(item.checkin_date.to_date)) %></td>
          <% end %>
          <td class="text-muted"><%= item.guests %></td>
          <td class="text-muted">From <%= item.price.format %></td>
        </tr>
      <% end %>
<!--      <tr>-->
<!--        <td></td>-->
<!--        <td class="booking-checkout__price" colspan="3"><%#= t('.before_tax') %></td>-->
<!--        <td class="booking-checkout__price">From <%#= @booking.total.format %></td>-->
<!--      </tr>-->
<!--      <tr>-->
<!--        <td></td>-->
<!--        <td class="booking-checkout__price" colspan="3"><%#= t('.vat_tax') %></td>-->
<!--        <td class="booking-checkout__price">From <%#= @booking.total.format %></td>-->
<!--      </tr>-->
      <tr>
        <td></td>
        <td class="booking-checkout__total"><%= t('.total') %></td>
        <td class="booking-checkout__total" colspan="2"><%= t('.nights', count: @booking.nights) %></td>
        <td class="booking-checkout__total">From <%= @booking.total.format %></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="col-lg-5">
    <div class="mt-5 card payment-information-widget">
      <div class="card-body">
        <h3 class="card-title"><%= t('bookings.payment_information.header') %></h3>

        <div class="text-muted">
          <p class="card-text">
          <p><%= t('bookings.payment_information.instruction1') %></p>

<!--          <ul class="list-unstyled">-->
<!--            <li><%#= t('bookings.payment_information.payment_title', booking_id: @booking.id) %></li>-->
<!--            <li><%#= t('bookings.payment_information.payment_bank') %></li>-->
<!--            <li><%#= t('bookings.payment_information.payment_bic') %></li>-->
<!--            <li><%#= t('bookings.payment_information.payment_iban') %></li>-->
<!--          </ul>-->
          </p>
        </div>
        <%= link_to t('.confirm', amount: @booking.total.format), personal_information_booking_path, class: 'btn btn-lg btn-block btn-primary' %>
      </div>
    </div>
  </div>
</div>

